{# the sales page. Should contain an information block and panels with car info linking to individual car info #}
{% extends 'base.html.twig' %}
{% set active_page = 'sales' %}
{% block title %}
    {{ active_page }}
{% endblock %}
{% block unique_page_content %}
<div class="uk-container">
    <h1>Sales</h1>
    <p>We stock a good range of affordable, quality used cars. Have a look at what we currently have in stock. Our stock is fully serviced and NCT'd before every sale</p>
</div>
<div class="uk-text-center">
    <h2>filters</h2>
</div>    <!-- Filter Controls -->
    <ul id="filter" class="uk-flex-center uk-subnav uk-subnav-pill">
        <li data-uk-filter=""><a href="">all</a></li>
        <li data-uk-filter="petrol"><a href="">petrol</a></li>
        <li data-uk-filter="diesel"><a href="">diesel</a></li>
    </ul>
<div class="uk-grid-width-medium-1-3 uk-grid-width-1-2" data-uk-grid="{controls: '#filter'}">
    {% for car in result %}
        <div data-uk-filter="{{ car.fuel }}">
            <div class="uk-panel-box uk-panel-header">
                <h2 class="uk-panel-title"><strong>Make</strong> - {{ car.make }}
                </h2>
                <p>Model - {{ car.model }}</p>
                <p>Fuel-type - {{ car.fuel }}</p>
                <a href="#" class="uk-button uk-button-primary">More Details</a>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}
{% block content %}
{% endblock %}
