{% extends 'base.html.twig' %}

{% set active_page = pageName %}

{% block title %}
{{ active_page }}
{% endblock %}



{% block unique_page_content %}
    <div class="uk-grid">
        <div class="uk-width-medium-4-5 uk-container-center uk-panel">
            <div class="uk-panel uk-panel-box uk-panel-header heading-panel">
                <h1 class="uk-panel-title">Sales</h1>
                <p>We stock a good range of affordable, quality used cars. Have a look at what we currently have in stock. Our stock is fully serviced and NCT'd before every sale</p>
            </div>
        </div>
    </div>


        <div class="uk-grid-width-medium-1-4 uk-grid-width-1-1 uk-grid-small" data-uk-grid>


                {% for image in images %}
                    <a href="{{ app.request.basepath }}/{{ image.imagePath|raw }}" data-lightbox-type="image" data-uk-lightbox="{group:'group1'}" title="Title">


                        <img class="uk-thumbnail" src="{{ app.request.basepath }}/{{ image.imagePath|raw }}" width="800" height="600" alt="{{ image.imagePath|trim('.jpg') }}_picture">
                    </a>

                        {#<li><img class="car-image" src="{{ app.request.basepath }}/{{ image.imagePath|raw }}" alt="{{ image.imagePath|trim('.jpg') }}_Picture" ></li>#}
                    {% endfor %}


        </div>
    <div class="uk-text-bold uk-text-center-medium">{{ cars.description|capitalize }}</div>
    <div class="uk-grid">
<div class="uk-width-medium-1-4 uk-width-1-1 uk-container-center">
        <ul class="uk-list uk-text-bold uk-float-left list-headings">
            <li>Make</li>
            <li>Model</li>
            <li>Reg</li>
            <li>Mileage</li>
            <li>Color</li>
            <li>Body type</li>
            <li>Previous owners</li>
            <li>Price</li>

        </ul>

            <ul class="uk-list uk-text-center uk-float-right list-items">
                <li>{{ cars.make|upper }}</li>
                <li>{{ cars.model|capitalize }}</li>
                <li>{{ cars.reg }}</li>
                <li>{{ cars.mileage }}</li>
                <li>{{ cars.color }}</li>
                <li>{{ cars.body }}</li>
                <li>{{ cars.owners }}</li>
                <li>{{ cars.price }}</li>

            </ul>
</div>
    </div>
    <div class="uk-text-center"><a href="" class="uk-button uk-button-primary">Enquire</a></div>

{% endblock %}
